<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="smart.utils.data.SmartGoodsEntity" table="smart_goods" schema="smartmall">
        <id name="goodid" column="goodid"/>
        <property name="name" column="name"/>
        <property name="goodsNo" column="goods_no"/>
        <property name="modelId" column="model_id"/>
        <property name="sellPrice" column="sell_price"/>
        <property name="marketPrice" column="market_price"/>
        <property name="costPrice" column="cost_price"/>
        <property name="upTime" column="up_time"/>
        <property name="downTime" column="down_time"/>
        <property name="createTime" column="create_time"/>
        <property name="storeNums" column="store_nums"/>
        <property name="img" column="img"/>
        <property name="isDel" column="is_del"/>
        <property name="content" column="content"/>
        <property name="keywords" column="keywords"/>
        <property name="description" column="description"/>
        <property name="searchWords" column="search_words"/>
        <property name="weight" column="weight"/>
        <property name="point" column="point"/>
        <property name="unit" column="unit"/>
        <property name="brandId" column="brand_id"/>
        <property name="visit" column="visit"/>
        <property name="favorite" column="favorite"/>
        <property name="sort" column="sort"/>
        <property name="listImg" column="list_img"/>
        <property name="smallImg" column="small_img"/>
        <property name="specArray" column="spec_array"/>
        <property name="exp" column="exp"/>
    </class>
</hibernate-mapping>